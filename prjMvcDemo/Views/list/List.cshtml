@model List<prjMvcDemo.Models.CCustomer>
@{
    ViewBag.Title = "List";
}

<h2>客戶一覽表</h2>
<div>
    @using (Html.BeginForm())
            {
                @:關鍵字 <input type="text" name="txtKeyword" /><input type="submit" value="查詢" />
            }
</div>
<div>
    <p>
        <a href="~/list/New" class="btn btn-primary">新增客戶</a>
    </p>

    <table class="table">
        <tr>
            <td>序</td>
            <td>姓名</td>
            <td>電話</td>
            <td>電子郵件</td>
            <td>地址</td>
            <td>密碼</td>
            <td>編輯</td>
            <td>刪除</td>
        </tr>
        @{
            int count = 0;
            foreach (prjMvcDemo.Models.CCustomer c in Model)
            {
                count++;
                <tr>
                    <td>@count</td>
                    <td>@c.fname</td>
                    <td>@c.fphone</td>
                    <td>@c.fEmail</td>
                    <td>@c.fAdress</td>
                    <td>@c.fPassword</td>
                    <td>
                        @Html.ActionLink("編輯", "Edit", "list", new { id = c.fid },
                       new { @class= "btn btn-success" })
                    </td>
                    <td>
                        @Html.ActionLink("刪除", "Delete", "list", new { id = c.fid },
                    new { onclick = "return confirm('確定要刪除嗎?')" ,@class= "btn btn-danger" })
                    </td>
                </tr>
            }
        }
        </table>
</div>

